{
  "name": "image-comparison-slider",
  "version": "1.0.0",
  "description": "Vanilla Javascript implementation of an image comparison slider.",
  "main": "index.js",
  "scripts": {
    "compile-scss": "node-sass scss/img-compare-slider.scss styles/img-compare-slider.css",
    "minify-css": "node-sass scss/img-compare-slider.scss dest/img-compare-slider.min.css --output-style compressed",
    "minify-js": "uglifyjs js/image-compare-slider.js --mangle --compress --output dest/img-compare-slider.min.js",
    "build": "npm run compile-scss && npm run minify-css && npm run minify-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byrdsean/image-comparison-slider.git"
  },
  "keywords": [
    "image",
    "comparison",
    "slider"
  ],
  "author": "Sean Byrd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/byrdsean/image-comparison-slider/issues"
  },
  "homepage": "https://github.com/byrdsean/image-comparison-slider#readme",
  "dependencies": {
    "node-sass": "^9.0.0"
  }
}
